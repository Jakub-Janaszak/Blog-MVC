<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.polsl.lab3_v8.kontroler.MakePostController">
   <children>
      <Label fx:id="blog" layoutX="247.0" layoutY="78.0" text="MAKE POST">
         <font>
            <Font name="Bodoni MT Poster Compressed" size="45.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldTitle" layoutX="84.0" layoutY="200.0" prefHeight="26.0" prefWidth="251.0">
         <tooltip>
            <Tooltip text="enter title" />
         </tooltip></TextField>
      <TextField fx:id="textFieldContent" layoutX="83.0" layoutY="254.0" prefHeight="26.0" prefWidth="434.0">
         <tooltip>
            <Tooltip text="enter content" />
         </tooltip></TextField>
      <Button fx:id="buttonPublish" layoutX="283.0" layoutY="301.0" mnemonicParsing="false" onAction="#makePost" text="publish">
         <tooltip>
            <Tooltip text="publish your post" />
         </tooltip></Button>
      <Label layoutX="83.0" layoutY="182.0" text="title:" />
      <Label layoutX="84.0" layoutY="236.0" text="content:" />
      <Button fx:id="buttonBack" layoutX="23.0" layoutY="22.0" mnemonicParsing="false" onAction="#switchToSideMenu" text="Back to menu">
         <tooltip>
            <Tooltip text="back to menu" />
         </tooltip></Button>
      <Label fx:id="labelError" layoutX="297.0" layoutY="280.0" textFill="RED" />
   </children>
</AnchorPane>
